name: Android CI (Robust)

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      # مرحله ۱: Checkout سورس کد
      - name: Checkout repository
        uses: actions/checkout@v4

      # مرحله ۲: Set up JDK 17 (برای همه build ها)
      - name: Set up JDK 17
        uses: actions/setup-java@v4
        with:
          distribution: temurin
          java-version: 17

      # مرحله ۳: بررسی و ساخت Gradle Wrapper اگر وجود نداشت
      - name: Ensure Gradle Wrapper
        run: |
          if [ ! -f gradlew ]; then
            echo "Gradle Wrapper not found, generating..."
            gradle wrapper
          fi
          chmod +x gradlew

      # مرحله ۴: Build APK Debug
      - name: Build Debug APK
        run: ./gradlew assembleDebug || echo "Debug build failed"

      # مرحله ۵: Build APK Release (اختیاری)
      - name: Build Release APK
        run: ./gradlew assembleRelease || echo "Release build failed"

      # مرحله ۶: Upload Debug APK
      - name: Upload Debug APK
        uses: actions/upload-artifact@v4
        with:
          name: app-debug
          path: app/build/outputs/apk/debug/app-debug.apk

      # مرحله ۷: Upload Release APK
      - name: Upload Release APK
        uses: actions/upload-artifact@v4
        with:
          name: app-release
          path: app/build/outputs/apk/release/app-release.apk
