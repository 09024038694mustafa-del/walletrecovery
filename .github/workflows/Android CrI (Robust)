name: Android CrI (Robust)

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      # ۱. Checkout سورس کد
      - name: Checkout repository
        uses: actions/checkout@v4

      # ۲. نصب JDK 17
      - name: Set up JDK 17
        uses: actions/setup-java@v4
        with:
          distribution: temurin
          java-version: 17

      # ۳. بررسی و ساخت Gradle Wrapper اگر وجود نداشت
      - name: Ensure Gradle Wrapper
        run: |
          if [ ! -f gradlew ]; then
            echo "Gradle Wrapper not found, generating..."
            gradle wrapper
          fi
          chmod +x gradlew

      # ۴. Build APK Debug
      - name: Build Debug APK
        run: ./gradlew assembleDebug || echo "Debug build failed"

      # ۵. Build APK Release
      - name: Build Release APK
        run: ./gradlew assembleRelease || echo "Release build failed"

      # ۶. Upload Debug APK
      - name: Upload Debug APK
        uses: actions/upload-artifact@v4
        with:
          name: app-debug
          path: app/build/outputs/apk/debug/app-debug.apk

      # ۷. Upload Release APK
      - name: Upload Release APK
        uses: actions/upload-artifact@v4
        with:
          name: app-release
          path: app/build/outputs/apk/release/app-release.apk
